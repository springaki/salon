= form_for @journal do |f|
  - if @journal.errors.any?
    #error_explanation
      %h2= "#{pluralize(@journal.errors.count, "error")} prohibited this journal from being saved:"
      %ul
        - @journal.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :checkin_at
    = f.date_select :checkin_at
  .field
    = f.label :karte_no
    = f.number_field :karte_no
  .field
    = f.label :quantity
    = f.number_field :quantity
  .field
    = f.label :item
    = f.text_field :item
  .actions
    = f.submit 'Save'
